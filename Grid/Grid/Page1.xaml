<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grid.Page1"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <StackLayout VerticalOptions="Center" Grid.Row="0">
                <Label Text="Welcome to Xamarin.Forms!"
                       HorizontalOptions="Center"
                       FontSize="30"
                       FontAttributes = "Bold"/>
                <Label Text="Cross-platform apps made easy"
                       HorizontalOptions="CenterAndExpand"
                       FontSize="18"/>
            </StackLayout>
            <Button Text="Login" BackgroundColor="#1dabf0"  Grid.Row="1" VerticalOptions="EndAndExpand" TextColor="White" CornerRadius="10" Clicked="Button_Clicked"/>
            <Button Text="Register" BackgroundColor="#1dabf0"  Grid.Row="2"  TextColor="White" WidthRequest="100" CornerRadius="10"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>